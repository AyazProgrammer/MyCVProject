<!DOCTYPE html>
<html lang="az">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dashboard</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<style>
		/* Header içindeki padding'i ayarlamak için ek stil */
		.login-container {
			max-width: 400px;
			margin: 50px auto;
			padding: 20px;
			border: 1px solid #ddd;
			border-radius: 10px;
			box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
		}
		.header-padding {
			padding: 15px 0; /* Üst ve alt padding değerini azaltarak görünüm iyileştirildi */
		}
	</style>
</head>
<body>
	@if (!Context.Request.Path.Value.Contains("/Account/Login") && !Context.Request.Path.Value.Contains("/Account/Register"))
	{
		<!-- Üst Kısım (Header) -->
		<header class="bg-dark text-white text-center sticky-top header-padding">
			<h1>Dashboard</h1>
			<nav class="d-flex flex-wrap justify-content-center">
				<!-- Results Link -->
				<a class="text-white me-3" href="/Dashboard/Home/Index">Results</a>
				<a class="text-white me-3" href="/Dashboard/Certificate/CertificateAdd">Certificate</a>
				<a class="text-white me-3" href="/Dashboard/Education/EducationOperation">Education</a>
				<a class="text-white me-3" href="/Dashboard/Skill/SkillOperation">Skill</a>
				<a class="text-white me-3" href="/Dashboard/Employement/EmployementOperation">Employement</a>
			</nav>
		</header>
	}
	

	<main>
		@RenderBody()
	</main>

	<!-- Alt Kısım (Footer) -->
	<footer class="bg-dark text-white text-center p-3">
		<p>&copy; 2024 - Bütün hüquqlar qorunur.</p>
	</footer>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
