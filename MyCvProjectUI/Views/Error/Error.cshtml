@model ErrorVM

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Xəta - 404 Səhifəsi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/error.css">
</head>
<body>

<div class="error-container">
    <h1>Sehife Tapilmadi</h1>
    <h2>Status kod: @Model.StatusCode</h2>
    <h3>URL: @Model.Path</h3>
    <p>Bağışlayın, axtardığınız səhifə tapılmadı. Geri qayıtmaq üçün aşağıdakı düyməni basın:</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-custom">Ana Səhifəyə Qayıt</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
